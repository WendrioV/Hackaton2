<!DOCTYPE html>
<html lang="pt-BR" class="h-100">
    <head>
        <!-- CSS only -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" crossorigin="anonymous"></link>

        <!-- JavaScript Bundle with Popper -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-U1DAWAznBHeqEIlVSCgzq+c9gqGAJn5c/t99JyeKa9xxaYpSvHU5awsuZVVFIhvj" crossorigin="anonymous"></script>    

        <link rel="shortcut icon" href="/img/icone.png" type="image/x-icon">
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" href="/css/style.css">
        <script src="/js/script.js"></script>
        <title>Fella's tasks</title>
    </head>
    <body class="d-flex flex-column h-100">
        <header>
            <nav class="d-flex justify-content-center align-items-end py-3">
                <div>
                    <img src="/img/logo2.png" alt="" class="logo">
                </div>
                <div>
                    <h1 class="text-black">Fella's tasks</h1>
                </div>
            </nav>
        </header>

        <main class="container">
            <form class="d-block justify-content-center" action="/admin/salvar-tarefa" method="POST">
                    <input type="text" class="w-100 form-control" name="tarefa" placeholder="Adicione uma tarefa" autocomplete="off" id="tarefa" required>
                    <button type="submit" class="btn btn-dark mt-2 w-100">Adicionar</button>
            </form>
            <hr>
           
            <div class="container my-5">
                <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
                    <%tarefas.forEach(tarefa =>{ %>
                    <div class="col">
                        <div class="card shadow-sm bg-dark">
                            <div class="card-body text-overflow">
                                <p id="texto" class="card-text text-white"><%=tarefa.tarefa%><a id="littlelixeira" href="/del/<%=tarefa.id_tarefa%>" >ðŸ—‘</a></p>
                            </div>
                        </div>
                    </div>
                    <% }) %>
                </div>
            </div>
        </main>
        <footer class="mt-auto bg-dark">
            <p class="fst-italic text-center text-white py-2 mb-0">Todos os direitos reservados</p>
        </footer>
    </body>
</html